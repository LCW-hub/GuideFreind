<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/trail_background_gradient_enhanced"
    android:gravity="center">

    <!-- 로고 컨테이너 -->
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardBackgroundColor="@color/colorCard"
        app:cardCornerRadius="100dp"
        app:cardElevation="16dp"
        android:layout_marginBottom="32dp">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_trail_logo_modern"
            android:tint="@color/colorPrimary" />

    </androidx.cardview.widget.CardView>

    <!-- 앱 제목 -->
    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="산책로 도우미"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- 부제목 -->
    <TextView
        android:id="@+id/tvAppSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자연과 함께하는 안전한 산책"
        android:textColor="@color/textColorSecondary"
        android:textSize="18sp"
        android:layout_marginBottom="48dp" />

    <!-- 로딩 프로그레스 -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:indicatorColor="@color/colorPrimary"
        app:trackColor="@color/colorSub" />

    <!-- 하단 자연 요소 아이콘들 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="48dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_weather_clear"
            android:tint="@color/trailGreen"
            android:alpha="0.6"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star"
            android:tint="@color/trailOrange"
            android:alpha="0.6"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_walk_logo"
            android:tint="@color/trailBlue"
            android:alpha="0.6" />

    </LinearLayout>

</LinearLayout> 

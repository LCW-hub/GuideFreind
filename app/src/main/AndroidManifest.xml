<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 필수 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <application
        android:name=".GuideFriendApplication"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GPS"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:vmSafeMode="false"
        tools:targetApi="31">

        <!-- 네이버 지도 API 키 -->
        <meta-data
            android:name="com.naver.maps.map.NCP_KEY_ID"
            android:value="iaxrf6bmtc" />
        <!-- 앱 시작 액티비티 -->
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 네이버 지도 관련 액티비티 -->
        <activity
            android:name=".MapsActivity"
            android:exported="false" />

        <!-- 기타 화면들 -->
        <activity android:name=".LoginActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".FindIdActivity" />
        <activity android:name=".FindPwActivity" />
        <activity android:name=".AdminMain" />
        <activity android:name=".GuestMain" />
        <activity android:name=".NormalMain" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".WeatherActivity" />
        <activity android:name=".CommunityActivity" />
        <activity android:name=".TipsActivity" />
        <activity android:name=".FavoritesActivity" />
        <activity android:name=".CapsuleAnimationActivity" />
        <activity android:name=".GachaResultActivity" />
        <activity android:name=".ShopActivity" />
        <activity android:name=".StepCounterActivity" />

    </application>
</manifest>
